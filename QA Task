	System.out.println(Defective);
	
	Defectiveqty = Float.parseFloat(Defective);
	
}


float TotalDamage = CustomerDamagedqty+Defectiveqty;

if (TotalDamage ==Unfulfillableqty) {
	
	System.out.println("Customer Damaged &  Defective are matched with Unfulfilled");
}else {
	
System.out.println("Customer Damaged &  Defective are not matched with Unfulfilled");}


