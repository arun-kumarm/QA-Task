//Total = Available + Transfer + Inbound + Unfulfillable + Researching



if (!(driver.findElements(By.xpath("//span[.=\"Available\"] ")).size()==0)){
	
	String Available = driver.findElement(By.xpath("/html/body/div[3]/div/div/div[4]")).getText();
	
	System.out.println(Available);
	
	//Available = Available.toString();
	
 Availableqty = Float.parseFloat(Available);
	
}


if (!(driver.findElements(By.xpath("//span[.=\"Transfer\"] ")).size()==0)){
	
	String Transfer = driver.findElement(By.xpath("/html/body/div[3]/div/div/div[6]")).getText();
	
	System.out.println(Transfer);
	
	Transferqty = Float.parseFloat(Transfer);
	
	 
}


if (!(driver.findElements(By.xpath("//span[.=\"Inbound\"] ")).size()==0)){
	
	String Inbound = driver.findElement(By.xpath("/html/body/div[3]/div/div/div[8]")).getText();
	
	System.out.println(Inbound);
	
	Inboundqty = Float.parseFloat(Inbound);
}

if (!(driver.findElements(By.xpath("//span[.=\"Unfulfillable\"] ")).size()==0)){
	
	String Unfulfillable = driver.findElement(By.xpath("/html/body/div[3]/div/div/div[10]")).getText();
	
	System.out.println(Unfulfillable);
Unfulfillableqty = Float.parseFloat(Unfulfillable);
	
}


if (!(driver.findElements(By.xpath("//span[.=\"Researching\"] ")).size()==0)){
	
	String Researching = driver.findElement(By.xpath("/html/body/div[3]/div/div/div[12]")).getText();
	
	System.out.println(Researching);
	
Researchingqty = Float.parseFloat(Researching);
	
}


float Total = Availableqty+Transferqty+Inboundqty+Unfulfillableqty+Researchingqty;

System.out.println(Total);


if (!(driver.findElements(By.xpath("//span[.=\"Customer Damaged\"] ")).size()==0)){
	
